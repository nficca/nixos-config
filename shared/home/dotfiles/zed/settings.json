{
  "extend_comment_on_newline": true,
  "ensure_final_newline_on_save": true,
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "auto_install_extensions": {
    "lua": true,
    "nix": true
  },
  "languages": {
    "Nix": {
      "language_servers": ["nil", "!nixd"],
      "formatter": {
        "external": {
          "command": "nixfmt"
        }
      }
    },
    "Lua": {
      "language_servers": ["lua-language-server"],
      "formatter": "language_server",
      "tab_size": 2
    }
  },
  "lsp": {
    "lua-language-server": {
      "settings": {
        "Lua": {
          "runtime": {
            "version": "LuaJIT"
          },
          "diagnostics": {
            "globals": ["vim", "require"]
          },
          "workspace": {
            "library": ["~/.local/share/nvim/lazy"]
          },
          "telemtry": {
            "enable": false
          }
        }
      }
    }
  }
}
