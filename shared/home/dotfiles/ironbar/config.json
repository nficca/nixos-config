{
  "position": "top",
  "height": 36,
  "start": [
    {
      "type": "workspaces"
    },
    {
      "type": "focused",
      "show_icon": true,
      "show_title": true,
      "icon_size": 32,
      "truncate": "end"
    }
  ],
  "center": [],
  "end": [
    {
      "type": "tray",
      "icon_size": 16,
      "prefer_theme_icons": true
    },
    {
      "type": "volume",
      "format": "{icon} {percentage}%"
    },
    {
      "type": "clock",
      "format": "%a %d %b %r"
    },
    {
      "type": "notifications",
      "show_count": false,
      "icons": {
        "closed_none": "󰍥",
        "closed_some": "󱥂",
        "closed_dnd": "󱅯",
        "open_none": "󰍡",
        "open_some": "󱥁",
        "open_dnd": "󱅮"
      }
    },
    {
      "type": "custom",
      "bar": [
        {
          "label": "",
          "name": "power-menu",
          "on_click": "popup:toggle",
          "type": "button"
        }
      ],
      "class": "power-menu",
      "popup": [
        {
          "orientation": "vertical",
          "type": "box",
          "widgets": [
            {
              "class": "power-menu-button",
              "label": "Lock",
              "on_click": "!hyprlock",
              "type": "button"
            },
            {
              "class": "power-menu-button",
              "label": "Log out",
              "on_click": "!niri msg action quit",
              "type": "button"
            },
            {
              "class": "power-menu-button",
              "label": "Suspend",
              "on_click": "!systemctl suspend",
              "type": "button"
            },
            {
              "label": "",
              "class": "power-menu-divider",
              "type": "label"
            },
            {
              "class": "power-menu-button",
              "label": "Shutdown",
              "on_click": "!systemctl poweroff",
              "type": "button"
            },
            {
              "class": "power-menu-button",
              "label": "Restart",
              "on_click": "!systemctl reboot",
              "type": "button"
            }
          ]
        }
      ],
      "tooltip": "Uptime: {{uptime | awk -F'( |,|:)+' '{print $6,$7\",\",$8,\"hours,\",$9,\"minutes\"}'}}"
    }
  ]
}
